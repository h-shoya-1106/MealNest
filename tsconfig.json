{
  "compilerOptions": {
    "types": ["next-auth"],
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "prisma",
    "src",
    ".next/types/**/*.ts"
, "src/features/calendar/CalendarHeader.tsx", "src/features/calendar/MonthView.tsx", "src/features/calendar/WeekView.tsx", "features/calendar/components/Day/DayCell.tsx", "src/features/calendar/weeklyCard.tsx", "src/features/shoplist/ShopListClient.tsx"  ],
  "exclude": [
    "node_modules"
  ]
}
